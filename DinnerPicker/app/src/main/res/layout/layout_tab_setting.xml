<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ddd0ea"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_part1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/round_rectangle"
        android:translationY="-20dp"
        app:layout_constraintBottom_toTopOf="@id/setting_part2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_favor_restaurant"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/setting_quick_keyword">

            <ImageView
                android:id="@+id/setting_favor_restaurant_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#eae4f4"
                android:src="@drawable/ic_home_star"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/setting_favor_restaurant_text"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/setting_favor_restaurant_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마음에 드는 식당 편집"
                android:textSize="26dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/setting_favor_restaurant_icon"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_quick_keyword"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_favor_restaurant"
            app:layout_constraintBottom_toTopOf="@id/setting_add_restaurant">

            <ImageView
                android:id="@+id/setting_quick_keyword_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#eae4f4"
                android:src="@drawable/ic_home_keyword"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/setting_quick_keyword_text"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/setting_quick_keyword_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빠른 검색어 편집"
                android:textSize="26dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/setting_quick_keyword_icon"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_add_restaurant"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_quick_keyword"
            app:layout_constraintBottom_toTopOf="@id/setting_ban_restaurant"
            >

            <ImageView
                android:id="@+id/setting_add_restaurant_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#eae4f4"
                android:src="@drawable/ic_setting_plus"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/setting_add_restaurant_text"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/setting_add_restaurant_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지도에 없는 식당 추가"
                android:textSize="26dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/setting_add_restaurant_icon"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/setting_ban_restaurant"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/setting_add_restaurant"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <ImageView
                android:id="@+id/setting_ban_restaurant_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/round_button"
                android:backgroundTint="#eae4f4"
                android:src="@drawable/ic_setting_ban"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/setting_ban_restaurant_text"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/setting_ban_restaurant_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="식당 밴"
                android:textSize="26dp"
                android:layout_marginHorizontal="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/setting_ban_restaurant_icon"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_part2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/setting_part1"
        app:layout_constraintWidth_percent="0.8"></androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/developer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="만든 이: 밥먹기, 밥하기"
        app:layout_constraintBottom_toTopOf="@id/speech_bubble"
        app:layout_constraintLeft_toLeftOf="@id/setting_part1"
        app:layout_constraintTop_toBottomOf="@id/setting_part1" />

    <LinearLayout
        android:id="@+id/speech_bubble"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/round_speech_bubble"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/setting_part1"
        app:layout_constraintTop_toBottomOf="@id/developer">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="왜!!!!!???!!?!?!?"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>